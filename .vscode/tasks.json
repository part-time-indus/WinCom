{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "create dir",
        "type": "shell",
        "windows": {
            "command": "cmd",
            "args": ["/C", "if not exist ${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension} mkdir ${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}"]
        }
      },
      {
        "type":"shell",
        "label": "build",
        "dependsOn": ["create dir"],
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}\\${fileBasenameNoExtension}.out",
          "/Fd:",
          "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}\\vc140.pdb",
          "/Fo:",
          "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}\\${fileBasenameNoExtension}.obj",
          "${file}"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
    ]
  }