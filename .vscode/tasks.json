{
    "version": "2.0.0",
    "tasks": [
      {
        "type":"shell",
        "label": "main build",
    
          //NOTE: dependsOn run all tasks in parallel by default
          //Use dependsOnOrder to make it sequential
        // "dependsOn": ["create dir", "build guids", "build registry", "build cmpnt2", "build client", "build cmpnt2 dll"],
        "dependsOn": ["build client"],
        "dependsOrder": "sequence",
        "command": "link.exe",
        "args": [
          "/DEBUG", 
          "/OUT:${workspaceFolder}\\build\\debug\\com_cmpnt2\\client.exe",
          "${workspaceFolder}\\build\\debug\\com_cmpnt2\\client.obj",
          "${workspaceFolder}\\build\\debug\\com_cmpnt2\\guids.obj",
          "UUID.lib",
          "Advapi32.lib",
          "Ole32.lib",
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "label": "create dir",
        "type": "shell",
        "windows": {
            "command": "cmd",
            "args": ["/C", "if not exist ${workspaceFolder}\\build\\debug\\com_cmpnt2 mkdir ${workspaceFolder}\\build\\debug\\com_cmpnt2"]
        }
      },
      {
        "type":"shell",
        "label": "build guids",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/FS",
          "/c",
          "/MTd",
          "/Od",
          "/D_DEBUG",
          "/EHsc",
          "/Fe:${workspaceFolder}\\build\\debug\\com_cmpnt2\\guids.out",
          "/Fd:${workspaceFolder}\\build\\debug\\com_cmpnt2\\vc140.pdb",
          "/Fo:${workspaceFolder}\\build\\debug\\com_cmpnt2\\guids.obj",
          "${workspaceFolder}\\src\\com_component2\\guids.cpp"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type":"shell",
        "label": "build registry",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/FS",
          "/c",
          "/MTd",
          "/Od",
          "/D_DEBUG",
          "/EHsc",
          "/Fe:${workspaceFolder}\\build\\debug\\com_cmpnt2\\registry.out",
          "/Fd:${workspaceFolder}\\build\\debug\\com_cmpnt2\\vc140.pdb",
          "/Fo:${workspaceFolder}\\build\\debug\\com_cmpnt2\\registry.obj",
          "${workspaceFolder}\\src\\com_component2\\registry.cpp"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type":"shell",
        "label": "build cmpnt2",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/FS",
          "/c",
          "/MTd",
          "/Od",
          "/D_DEBUG",
          "/EHsc",
          "/Fe:${workspaceFolder}\\build\\debug\\com_cmpnt2\\cmpnt2.out",
          "/Fd:${workspaceFolder}\\build\\debug\\com_cmpnt2\\vc140.pdb",
          "/Fo:${workspaceFolder}\\build\\debug\\com_cmpnt2\\cmpnt2.obj",
          // "${workspaceFolder}\\src\\com_component2\\registry.h",
          // "${workspaceFolder}\\src\\com_component2\\registry.cpp",
          "${workspaceFolder}\\src\\com_component2\\cmpnt2.cpp"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type":"shell",
        "label": "build client",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/FS",
          "/c",
          "/MTd",
          "/Od",
          "/D_DEBUG",
          "/EHsc",
          "/Fe:${workspaceFolder}\\build\\debug\\com_cmpnt2\\client.out",
          "/Fd:${workspaceFolder}\\build\\debug\\com_cmpnt2\\vc140.pdb",
          "/Fo:${workspaceFolder}\\build\\debug\\com_cmpnt2\\client.obj",
          "${workspaceFolder}\\src\\com_component2\\client.cpp"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },

      {
        "type":"shell",
        "label": "build cmpnt2 dll",
        "command": "link.exe",
        "args": [
          "/DLL",
          "/DEBUG",
          "/OUT:${workspaceFolder}\\build\\debug\\com_cmpnt2\\cmpnt2.dll",
          "${workspaceFolder}\\build\\debug\\com_cmpnt2\\cmpnt2.obj",
          "${workspaceFolder}\\build\\debug\\com_cmpnt2\\guids.obj",
          "${workspaceFolder}\\build\\debug\\com_cmpnt2\\registry.obj",
          "UUID.lib",
          "Advapi32.lib",
          "Ole32.lib",
          "/DEF:${workspaceFolder}\\src\\com_component2\\cmpnt2.def",
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type":"shell",
        "label": "register cmpnt2 dll",
        "windows": {
            "command": "cmd",
            "args": ["regsvr32.exe", "/s", "${workspaceFolder}\\build\\debug\\com_cmpnt2\\cmpnt2.dll"]
        }
      },
    ]
  }