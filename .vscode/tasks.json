{
    "version": "2.0.0",
    "tasks": [
      {
        "type":"shell",
        "label": "final build",
    
          //NOTE: dependsOn run all tasks in parallel by default
          //Use dependsOnOrder to make it sequential
        "dependsOn": ["create dir", "build guids", "build create", "link create", "build cmpnt","build cmpnt dll", "build client"],
        "dependsOrder": "sequence",
        "command": "link.exe",
        "args": [
          "/PDB:${workspaceFolder}\\build\\debug\\com_cmpnt\\vc140.pdb",
          "/DEBUG",
          "/OUT:${workspaceFolder}\\build\\debug\\com_cmpnt\\client1.exe",
